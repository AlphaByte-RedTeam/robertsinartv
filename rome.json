{
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentSize": 4,
        "lineWidth": 80,
        "ignore": [
            ".DS_Store",
            "node_modules",
            "/build",
            "/.svelte-kit",
            "/package",
            ".env",
            ".env.*",
            "!.env.example",
            "vite.config.js.timestamp-*",
            "vite.config.ts.timestamp-*",
            ".dccache"
        ]
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "double",
            "trailingComma": "all"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}